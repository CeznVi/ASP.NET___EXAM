@model FlowerMarket.Models.FlowerModel

@{
    ViewData["Title"] = "Повна інформація";
}

<h1>Повна інформація</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Опис
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Посилання на картинку
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Img)
        </dd>
        <dt class = "col-sm-2">
            Ціна
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning mb-1" asp-action="Edit" asp-route-id="@Model?.Id">Змінити</a> <br />
    <a class="btn btn-primary" asp-action="Index">Назад</a>
</div>
